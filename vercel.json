{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "env": {
    "DATABASE_URL": "postgresql://<user>:<pass>@<host>:<port>/<db_name>",
    "ADMIN_MAIL": "mail@example.com",
    "ADMIN_PASS": "123456",
    "JWT_SECRET": "yoursecret"
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" }
  ]
}